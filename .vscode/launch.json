    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dt help",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/cli/dist/index.js",
            "args": [
                "-h",
            ],
            "outputCapture": "std",
            "env": {
                "LOG_LEVEL": "verbose",
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "dt srg evaluate",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/cli/dist/index.js",
            "args": [
                "srg",
                "evaluate",
                "simplenode2423"
            ],
            "outputCapture": "std",
            "env": {
                "LOG_LEVEL": "verbose",
                "LOG_FILE": "true",
                // "SRG_EVALUATION_STAGE": "dev",
                // "SRG_EVALUATION_SERVICE": "demo-service",
                // "SRG_APP_VERSION": "1.0.0",
                // "SRG_EVALUATION_GIT_COMMIT_ID": "1234567890",
            },
            "envFile": "${workspaceFolder}/cli/.env",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}