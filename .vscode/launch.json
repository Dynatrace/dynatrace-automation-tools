    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dt help",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/cli/dist/index.js",
            "args": [
                "-h",
            ],
            "outputCapture": "std",
            "env": {
                "LOG_LEVEL": "verbose",
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "dt srg configure",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/cli/dist/index.js",
            "args": [
                "srg",
                "configure",
                "simplenode"
            ],
            "outputCapture": "std",
            "env": {
                "LOG_LEVEL": "verbose",
            },
            "envFile": "${workspaceFolder}/cli/.env",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}