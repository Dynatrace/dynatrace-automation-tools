{
    "name": "dt-automation-cli",
    "version": "0.0.1",
    "description": "Dynatrace Automation tools CLI",
    "main": "index.js",
    "bin": "executables/index.js",
    "scripts": {
        "dev": "tsc --watch",
        "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
        "build": "npx tsc && npm run copy-assets",
        "copy-assets": "rm -rf ./dist/SRGAutomation/configure/templates/ && cp -r ./src/SRGAutomation/configure/templates ./dist/SRGAutomation/configure/templates/",
        "help": "npm run build && node dist/index.js -h",
        "pack": "npx tsc && ncc build dist/index.js -m -o executables && npx pkg package.json ",
        "docker": "docker build -t dt-automation-cli . && docker run -it dt-automation-cli bash"
    },
    "pkg": {
        "scripts": "executables/**/*.js",
        "assets": [
            "executables/fonts/*",
            "executables/**/*.json"
        ],
        "targets": [
            "linux",
            "macos",
            "win"
        ],
        "outputPath": "./executables"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@commander-js/extra-typings": "^10.0.2",
        "@types/qs": "^6.9.7",
        "axios": "^1.3.0",
        "cloudevents": "^6.0.4",
        "commander": "^10.0.0",
        "figlet": "^1.5.2",
        "qs": "^6.11.0",
        "uuid": "^9.0.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/figlet": "^1.5.5",
        "@types/node": "^18.11.18",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "2.8.4",
        "typescript": "^4.9.4"
    }
}
