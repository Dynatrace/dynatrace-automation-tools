{
    "name": "dt-automation-cli",
    "version": "0.0.1",
    "description": "Dynatrace Automation tools CLI",
    "main": "index.js",
    "bin": "executables/index.js",
    "scripts": {
        "build": "npx tsc",
        "help": "npm run build && node dist/index.js -h",
        "pack": "npx tsc && ncc build dist/index.js -m -o executables && npx pkg package.json ",
        "docker": "docker build -t dt-automation-cli . && docker run -it dt-automation-cli bash"
    },
    "pkg": {
        "scripts": "executables/**/*.js",
        "assets": "executables/fonts/*",
        "targets": [
            "linux",
            "macos",
            "win"
        ],
        "outputPath": "./executables"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@commander-js/extra-typings": "^10.0.2",
        "@types/qs": "^6.9.7",
        "axios": "^1.3.0",
        "commander": "^10.0.0",
        "figlet": "^1.5.2",
        "uuid": "^9.0.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/figlet": "^1.5.5",
        "@types/node": "^18.11.18",
        "@types/uuid": "^9.0.0",
        "typescript": "^4.9.4"
    }
}