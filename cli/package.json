{
    "name": "dta",
    "description": "Dynatrace Automation tools CLI",
    "main": "index.js",
    "bin": "executables/index.js",
    "scripts": {
        "dev": "tsc --watch",
        "test": "jest --projects jest.config.js",
        "test-integration": "jest --projects jest.config.integration.js",
        "ci": "jest --ci --projects jest.config.js",
        "ci:integration": "jest --ci --projects jest.config.integration.js",
        "lint": "eslint --ignore-path .eslintignore --ext .ts .",
        "build": "npx tsc",
        "pack": "npx tsc && ncc build dist/index.js -m -o executables && npx pkg package.json ",
        "docker": "npm install && npm run pack && docker build -t dta . && docker run -it dta bash"
    },
    "jest": {
        "projects": [
            "<rootDir>/jest.config.js",
            "<rootDir>/jest.config.integration.js"
        ]
    },
    "pkg": {
        "scripts": "executables/**/*.js",
        "assets": [
            "executables/fonts/*",
            "executables/**/*.json"
        ],
        "targets": [
            "node18-linux-arm64",
            "node18-linux-x64",
            "node18-win-arm64",
            "node18-win-x64"
        ],
        "outputPath": "./executables"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@commander-js/extra-typings": "^10.0.2",
        "@types/qs": "^6.9.7",
        "axios": "^1.6.0",
        "commander": "^10.0.0",
        "figlet": "^1.5.2",
        "qs": "^6.11.0",
        "uuid": "^9.0.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/figlet": "^1.5.5",
        "@types/jest": "^29.5.4",
        "@types/node": "^18.11.18",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.6.4",
        "prettier": "^3.0.2",
        "ts-jest": "^29.1.1",
        "typescript": "^4.9.4"
    }
}