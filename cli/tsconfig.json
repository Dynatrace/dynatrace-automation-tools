{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./dist",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "jest"
        ],
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./dist",
        "executables"
    ]
}